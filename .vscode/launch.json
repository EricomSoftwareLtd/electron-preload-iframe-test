    "version": "0.2.0",
    "configurations": [
        {
            "name": "Electron",
            "type": "node",
            "protocol": "inspector",
            "request": "launch",
            "program": "${workspaceRoot}/main.js",
            "stopOnEntry": false,
            "env": {
                "DISPLAY": ":0"
            },
            "args": [],
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "runtimeArgs": [
                ".",
                "--no-sandbox",
                // "--enable-logging",
                "--disable-gpu"
            ],
            // "console": "integratedTerminal",
            "outputCapture": "std",
            "sourceMaps": false
        }
    ]
}